{% macro navbar() %}
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <a class="navbar-brand" href="#">PPubs Crawler</a>
        <ul id="actions" class="navbar-nav ml-auto">
            <li class="nav-item">
                <button id="btn-clear-cache" class="btn btn-light">Clear Cache!</button>
            </li>
        </ul>
    </nav>

    <script>
        $("#btn-clear-cache").click(function(){
            var url = localhost + "/api/ppubs/cache/clear"
            fetch(url).then(function(response) {
                return response.json()
            }).then(function(data) {
                console.log("Cache cleared: ", data);
            }).catch(function(error) {
                console.log(error);
            });
        });
    </script>
{% endmacro %}
